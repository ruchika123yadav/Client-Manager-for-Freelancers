<% layout('layouts/boilerplate') -%>

<div class="container mt-5">
  <div class="card mb-4 shadow">
    <div class="card-header bg-primary text-white">
      <h3 class="mb-0">ğŸ‘¤ Client Profile</h3>
    </div>
    <div class="card-body">
      <p><strong>Name:</strong> <%= client.name %></p>
      <p><strong>Email:</strong> <%= client.email %></p>
      <p><strong>Phone:</strong> <%= client.phone || 'N/A' %></p>
      <p><strong>Company:</strong> <%= client.company || 'N/A' %></p>
      <p><strong>Notes:</strong> <%= client.notes || 'None' %></p>
    </div>
  </div>
  <!-- Project Section -->
  <div class="card shadow">
    <div class="card-header bg-info text-white">
      <h4 class="mb-0">ğŸ“ Projects</h4>
    </div>
    <div class="card-body">
      <% if (client.projects.length === 0) { %>
      <p class="text-muted fst-italic">No projects found for this client.</p>
      <% } else { %>
      <div class="list-group">
        <% client.projects.forEach(project => { %>
        <div class="list-group-item mb-3 border rounded p-3">
          <h5><%= project.title %></h5>
          <p>
            <strong>Deadline:</strong> <%= new
            Date(project.deadline).toLocaleDateString() %>
          </p>
          <p>
            <strong>Status:</strong> <%= project.isCompleted ? "âœ… Completed" :
            "âŒ Not Completed" %>
          </p>
          <p>
            <strong>Payment:</strong> <%= project.paymentStatus %> | â‚¹<%=
            project.amount %>
          </p>
          <!-- Action buttons -->
          <div class="d-flex gap-2">
            <form action="/projects/<%= project._id %>/status" method="POST">
              <input
                type="hidden"
                name="isCompleted"
                value="<%= !project.isCompleted %>"
              />
              <button
                type="submit"
                class="btn btn-sm btn-<%= project.isCompleted ? 'warning' : 'success' %>"
              >
                Mark as <%= project.isCompleted ? 'Incomplete' : 'Completed' %>
              </button>
            </form>
            <form
              action="/projects/<%= project._id %>?_method=DELETE"
              method="POST"
              onsubmit="return confirm('Delete this project?');"
            >
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>
  </div>
</div>
